# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.bat]
charset = shift-jis
end_of_line = crlf

[*.j2]
insert_final_newline = false
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.rst]
indent_size = 3

[Makefile]
indent_style = tab
trim_trailing_whitespace = false
